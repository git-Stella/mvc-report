{% extends "base.html.twig" %}

{% block title %}Draw{% endblock %}

{% block body %}
<h1>Draw</h1>
<p><a href="{{ path('card_start') }}">Cards</a></p>
<p><a href="{{ path('card_shuffle') }}">Shuffle</a></p>
<p><a href="{{ path('card_draw') }}">Draw</a></p>
<p><a href="{{ path('card_draw_num', {num: 5}) }}">Draw 5</a></p>
{{ deck }}
<p class="hand">
    {% for i in range(0, cards|length-1) %}
        {{ cards[i] }}
    {% endfor %}
</p>
{% endblock %}