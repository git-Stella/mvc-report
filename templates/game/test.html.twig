{% extends "base.html.twig" %}

{% block title %}Card Game{% endblock %}

{% block body %}
<h1>Card game</h1>

<p>Card games are a classic.</p>
{{ include('flash.html.twig') }}

<h1>Player Hand</h1>
<ul>
    {% for card in phand %}
        <li>{{ card }}</li>
    {% endfor %}
</ul>

<h1>Bank Hand</h1>
<ul>
    {% for card in hand %}
        <li>{{ card }}</li>
    {% endfor %}
</ul>
<h1>Deck</h1>
<p>{{ deckNum }}</p>
<ul>
    {% for card in deck %}
        <li>{{ card }}</li>
    {% endfor %}
</ul>

{% endblock %}