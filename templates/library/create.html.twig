{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
{{ include('flash.html.twig') }}
<form method="POST" action="{{ path('post_library_create') }}">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required value="A title of titles"><br>
    <label for="author">Author:</label>
    <input type="text" id="author" name="author" required value="John Doe"><br>
    <label for="isbn">ISBN:</label>
    <input type="text" id="isbn" name="isbn" required value="NNN-N-NN-NNNNNN-N" minlength="13" maxlength="17"><br>
    <label for="image">Image URL:</label>
    <input type="text" id="image" name="image" required value="img.jpg"><br>
    <input type="submit" value="Submit">
</form>
{% endblock %}