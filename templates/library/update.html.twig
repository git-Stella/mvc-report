{% extends 'base.html.twig' %}

{% block title %}Update book{% endblock %}

{% block body %}
{{ include('flash.html.twig') }}
<form method="POST" action="{{ path('post_library_update') }}">
    <input type="hidden" id="id" name="id" value="{{ book.getId|e }}">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required value="{{ book.getTitle|e }}"><br>
    <label for="author">Author:</label>
    <input type="text" id="author" name="author" required value="{{ book.getAuthor|e }}"><br>
    <label for="isbn">ISBN:</label>
    <input type="text" id="isbn" name="isbn" required value="{{ book.getIsbn|e }}" minlength="13" maxlength="17"><br>
    <label for="image">Image URL:</label>
    <input type="text" id="image" name="image" required value="{{ book.getPicture|e }}"><br>
    <input type="submit" value="Submit">
</form>
{% endblock %}